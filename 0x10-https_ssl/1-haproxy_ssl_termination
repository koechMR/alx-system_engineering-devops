global
   log 127.0.0.1 local0 notice
   maxconn 2000
   user haproxy
   group haproxy

defaults
   log   global
   mode  http
   option  httplog
   option  dontlognull
   retries 3
   option redispatch
   timeout connect  5000
   timeout client  10000
   timeout server  10000

frontend www-https
    bind   0.0.0.0:80
    bind   0.0.0.0:443 ssl crt /etc/haproxy/certs/get-koechbrian.tech.pem
    redirect scheme https if !{ ssl_fc }
    stats uri /haproxy?stats
    option forwardfor
    default_backend www-backend

backend www-backend
    balance  roundrobin
    server 259865-web-01 34.201.174.77:80 check
    server 259865-web-02 100.26.174.137:80 check
